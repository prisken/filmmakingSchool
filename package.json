{
  "name": "filmmaker-school-platform",
  "version": "1.0.0",
  "description": "Comprehensive online filmmaking course platform with multi-language support",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "stripe": "^13.5.0",
    "nodemailer": "^6.9.4",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1",
    "socket.io": "^4.7.2",
    "cloudinary": "^1.40.0",
    "i18next": "^23.4.4",
    "i18next-http-middleware": "^3.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "filmmaking",
    "online-courses",
    "education",
    "chinese",
    "multilingual"
  ],
  "author": "Filmmaker School",
  "license": "MIT"
} 